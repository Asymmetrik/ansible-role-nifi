[Unit]
Description=Apache NiFi-toolkit
After=syslog.target network.target

[Service]
User={{ nifi_user }}
Type=simple
PIDFile={{ nifi_toolkit_pid_file }}
# Run ExecStartPre with root-permissions
PermissionsStartOnly=true
ExecStartPre=-/usr/bin/mkdir -p {{ nifi_pid_dir }}
ExecStartPre=/usr/bin/chown -R {{ nifi_user }} {{ nifi_pid_dir }}
Environment="JAVA_HOME={{ nifi_java_home }}"
ExecStart={{ nifi_base_dir }}/nifi-toolkit-current/bin/tls-toolkit.sh server -f {{ nifi_base_dir }}/nifi-toolkit-current/conf/config-server.json -F
ExecStop=

[Install]
WantedBy=multi-user.target
